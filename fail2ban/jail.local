[DEFAULT]
# זמן חסימה - 5 דקות
bantime = 300

# חלון זמן לספירת ניסיונות - 2 דקות
findtime = 120

# מספר ניסיונות כושלים לפני חסימה
maxretry = 3

# פעולת חסימה - שימוש ב-Docker action
banaction = docker-action

# רשימה לבנה של IP שלא לחסום (רק loopback אמיתי)
ignoreip = ::1

[nginx-auth]
enabled = true
port = http,https
filter = nginx-auth
logpath = /var/log/nginx/access.log
maxretry = 3
findtime = 120
bantime = 300